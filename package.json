{
  "name": "rollup-plugin-pure",
  "type": "module",
  "version": "0.4.0",
  "packageManager": "pnpm@10.10.0",
  "description": "Annotate functions as pure for Rollup",
  "author": {
    "name": "Daniel Roe <daniel@roe.dev>",
    "url": "https://github.com/danielroe"
  },
  "license": "MIT",
  "repository": "danielroe/rollup-plugin-pure",
  "keywords": [
    "vite",
    "rollup",
    "pure-annotation"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev:prepare": "simple-git-hooks && unbuild --stub",
    "lint": "pnpm eslint .",
    "prepack": "pnpm build",
    "prepublishOnly": "pnpm lint && pnpm test",
    "release": "bumpp && npm publish",
    "test": "vitest run",
    "test:types": "tsc --noEmit"
  },
  "peerDependencies": {
    "rollup": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "estree-walker": "^3.0.3",
    "magic-string": "^0.30.17",
    "unplugin-utils": "^0.2.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.12.1",
    "@codspeed/vitest-plugin": "4.0.1",
    "@types/estree": "1.0.7",
    "@types/node": "22.15.11",
    "@vitest/coverage-v8": "3.1.3",
    "bumpp": "10.1.0",
    "eslint": "9.26.0",
    "execa": "9.5.2",
    "lint-staged": "15.5.1",
    "magic-regexp": "0.10.0",
    "pathe": "2.0.3",
    "rollup": "4.40.1",
    "simple-git-hooks": "2.13.0",
    "std-env": "3.9.0",
    "typescript": "5.8.3",
    "unbuild": "3.5.0",
    "vite": "6.3.5",
    "vitest": "3.1.3"
  },
  "resolutions": {
    "rollup-plugin-pure": "link:."
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "npx eslint --fix"
    ]
  }
}
